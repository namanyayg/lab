    background rgba(#3F51B5, .05)
  &:after
    background rgba(#3F51B5, .9)
  
.lccpp
  .creation__overlay
    background rgba(#2979FF, .05)
  &:after
    background rgba(#2979FF, .8)

.shm-simulator
  .creation__overlay
    background rgba(#9C27B0, .05)
  &:after
    background rgba(#9C27B0, .8)
    
.ac-video
  .creation__overlay
    background rgba(#FFAB00, .05)
  &:after
    background rgba(#FFAB00, .9)
    
.diode
  .creation__overlay
    background rgba(#ff5589, .06)
  &:after
    background rgba(#ff5589, .9)

.bandc
  .creation__overlay
    background rgba(#565e8e, .06)
  &:after
