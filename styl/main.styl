@import 'partials/_normalize'
@import 'partials/_var'

/* ==========================================================================

    LET'S GET STARTED!

   ========================================================================== */


body
  font-family 'Source Sans Pro', serif
  font-weight 300
  font-size 125%
  color #353535

$text-color = desaturate(#0a3d5d, 60%)
$brand-color = #2996ff

h1, h2, h3
  font-weight 300
  color $text-color

a
  color $brand-color


/* ==========================================================================
   =Content
   ========================================================================== */


header
  text-align center

h1
  font-size 4em
  margin 0 0
  font-weight 700
  text-transform uppercase
  text-shadow 1px 1px white, 2px 2px white, 3px 3px rgba(#0a3d5d, .3), 4px 4px rgba(#0a3d5d, .1)

h2
  margin .375em 0 .65em

h3
  margin 0 0 1.5em

  a
    color inherit
    text-decoration none
    background lighten($text-color, 90%)
    border-radius 2px
    padding 0 7px 4px
    font-weight 400
    transition all .1s ease

    &:hover
      background lighten($text-color, 20%)
      color white


.creations
  overflow hidden
  max-width 60em
  margin 0 auto 4em

.creation
  overflow hidden
  display flex
  flex-direction row
  justify-content space-between
  width 100%
  margin 0 0 4em

  a
    text-decoration none

  &__img
    position relative
    width calc(50% - 1em)

  &__overlay
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    z-index 2

  &__content
    width calc(50% - 1em)

  footer
    font-size .875em

  &__name
    text-shadow 1px 1px rgba(black, .1)
    font-size 1.5em
    font-weight 400
    margin 0 0 .5rem
    color inherit

  &__date-and-age
    display inline-block

    .date
      font-weight 400

  &__type
    padding .1em .375em
    margin-right .375em
    border-radius 3px
    font-weight 400
    display inline-block
    border 2px solid
    text-shadow 1px 1px rgba(black, .1)

  &__link
    box-sizing border-box
    display inline-block
    font-weight 400
    color white
    padding .5em 1em
    text-shadow 1px 1px rgba(black, .1)
    border-radius 3px
    width 9rem
    text-align center
    transition all .3s ease

    &:after
      content ' â†’'

    &:hover, &:active, &:focus
      box-shadow inset 0 0 10em rgba(black, .2)

  &__source
    display block
    font-size .875em
    padding-top .25em
    width 9rem
    text-align center

    a
      border-bottom thin solid mix(#eee, $brand-color)

  img
    width 100%

creation-style(color)
  .creation__overlay
    background rgba(color, .05)
  .creation__type
    color color
    border-color color
  .creation__link
    background color

.collisions
  creation-style #0ead15

.keyzen
  creation-style #0bb667

.equipot
  creation-style #FF5722

.acgen
  creation-style #3F51B5

.lccpp
  creation-style #2979FF

.shm-simulator
  creation-style #9C27B0

.ac-video
  creation-style #FFAB00

.diode
  creation-style #ff5589

.bandc
  creation-style #565e8e

.acgraphs
  creation-style #009688



