/* ==========================================================================
   =MEDIA
   ========================================================================== */

@media (max-width 90em) 
  .creation
    width 33.3333%
    padding-bottom 25%

@media (max-width 65em)
  .creation
    width 50%
    padding-bottom 37.5%
    margin 1.5em 0
    
  h1 
    font-size 3em
  h2, h3
    font-size 1em
    
@media (max-width 50em)
  body
    max-width 25em
    margin: 0 auto;

  .creation
    width 100%
    padding-bottom 75%
    margin-bottom 2em
    
@media (max-width 35em) 
  body
    font-size 112.5%

@media (max-width 30em)
  .type
    display none